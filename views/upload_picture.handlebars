<main id="login">
    {{#if user}}
    <form action="/user/upload-avatar" enctype="multipart/form-data" method="post">
        <div>
            <label for="avatar">Upload Avatar</label>
            <input type="file" id="avatar" name="avatar" required>
        </div>
        <input type="submit" value="Upload">
    </form>

    {{else if project}}
    <form action="/portfolio/upload-picture/{{project.id}}" enctype="multipart/form-data" method="post">
        <div>
            <label for="image">Upload image</label>
            <input type="file" id="image" name="image" required>
        </div>
        <input type="submit" value="Upload">
    </form>
    {{/if}}
</main>