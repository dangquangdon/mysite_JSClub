<main id="portfolio">
    <h2 class="small-heading">Welcome to</h2>
    <h1 class="big-heading">
        My
        <span class="text-blue">Portfolio</span>
    </h1>
    <div class="projects">
        {{#each portfolio}}
        <div class="item">
            <a href="#">
                <img src="/static/images/{{this.image}}" alt="" />
            </a>
            <h1 class="small-heading">{{this.title}}</h1>
            <p>{{this.description}}</p>

            {{#if this.link_demo}}
            <a href="#" class="btn-light"> <i class="fas fa-eye"></i> Project </a>
            {{else}}
            {{/if}}

            {{#if this.link_github}}
            <a href="#" class="btn-dark">
                <i class="fab fa-github"></i> Github
            </a>
            {{else}}
            {{/if}}

            {{#if ../current_user}}
            <a href="/portfolio/edit/{{this._id}}" class="btn-dark">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a href="/portfolio/upload-picture/{{this._id}}" class="btn-dark">
                <i class="fas fa-image"></i> Chang Picture
            </a>
            <form action="/portfolio/delete/{{this._id}}?_method=DELETE" method="post">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn-dark">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
            </form>

            {{else}}
            {{/if}}
        </div>
        {{else}}
        {{#if handle_user}}
        <h1 class="big-heading">No Projects</h1>
        <h2 class="small-heading">Add your project here and they will look like this</h2>
        {{else}}
        {{/if}}
        <div class="item">
            <a href="#">
                <img src="/static/images/default.jpg" alt="" />
            </a>
            <a href="#" class="btn-light"> <i class="fas fa-eye"></i> Project </a>
            <a href="#" class="btn-dark">
                <i class="fab fa-github"></i> Github
