<main id="portfolio">
    <h2 class="small-heading">Welcome to</h2>
    <h1 class="big-heading">
        My
        <span class="text-blue">Portfolio</span>
    </h1>
    {{#each portfolio}}
    <div class="projects">
        <div class="item">
            <a href="#">
                <img src="/static/images/{{this.image}}" alt="" />
            </a>
            <p>{{this.description}}</p>

            {{#if this.link_demo}}
            <a href="#" class="btn-light"> <i class="fas fa-eye"></i> Project </a>
            {{else}}
            {{/if}}

            {{#if this.link_github}}
            <a href="#" class="btn-dark">
                <i class="fab fa-github"></i> Github
            </a>
            {{else}}
            {{/if}}

            {{#if ../current_user}}
            <a href="/portfolio/edit/{{this._id}}" class="btn-dark">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a href="#" class="btn-dark">
                <i class="fas fa-trash-alt"></i> Delete
            </a>
            {{else}}
            {{/if}}
        </div>
    </div>
